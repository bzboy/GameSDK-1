<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="270dp"
        android:layout_centerInParent="true"
        android:background="@drawable/ilong_alpha_bg"
        android:paddingLeft="15dip"
        android:paddingRight="15dip" >

        <RelativeLayout
            android:id="@+id/title_bar"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" >

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:paddingRight="10dp"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/trade_manage"
                android:textColor="#00c7f8"
                android:textSize="20sp" />
        </RelativeLayout>

        <ListView
            android:id="@+id/m_listview"
            android:layout_width="280dp"
            android:layout_height="200dp"
            android:layout_below="@+id/title_bar"
            android:layout_marginTop="5dp"
            android:background="@drawable/ilong_pay_bg"
            android:cacheColorHint="#00000000"
            android:divider="@null"
            android:listSelector="#00000000"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:visibility="gone" >
        </ListView>

        <RelativeLayout
            android:id="@+id/exchange_bar"
            android:layout_width="280dp"
            android:layout_height="36dp"
            android:layout_below="@+id/title_bar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:background="@drawable/ilong_pay_bg"
            android:clickable="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:text="交易记录"
                android:textColor="#898989" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="10dp"
                android:src="@drawable/arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tel_bar"
            android:layout_width="280dp"
            android:layout_height="36dp"
            android:layout_below="@+id/exchange_bar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:background="@drawable/ilong_pay_bg" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:text="客服电话"
                android:textColor="#898989" />

            <TextView
                android:id="@+id/text_telephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="7dp"
                android:text="020-66887584"
                android:textColor="#898989" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bottom_bar"
            android:layout_width="280dp"
            android:layout_height="36dp"
            android:layout_below="@+id/tel_bar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:background="@drawable/ilong_pay_bg" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:text="版本"
                android:textColor="#898989" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="7dp"
                android:text="1.3.7"
                android:textColor="#898989" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>